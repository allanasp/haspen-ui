{
  "name": "@haspen/design-tokens",
  "version": "0.1.0",
  "description": "Design tokens for Haspen UI - colors, typography, spacing, and more",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "scss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/allanasp/haspen-ui.git",
    "directory": "packages/design-tokens"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && sass scss/index.scss dist/index.css",
    "dev": "tsup --watch",
    "clean": "rm -rf .turbo node_modules dist",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@storybook/csf": "^0.1.13",
    "@storybook/global": "^5.0.0",
    "@types/node": "^20.17.45",
    "sass": "^1.87.0",
    "storybook": "^9.1.8",
    "tsup": "^8.0.2"
  }
}

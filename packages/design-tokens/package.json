{
  "name": "@haspen-ui/design-tokens",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "scss"
  ],
  "scripts": {
    "build": "tsup && sass scss/index.scss dist/index.css",
    "dev": "tsup --watch",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "devDependencies": {
    "@storybook/csf": "^0.1.13",
    "@storybook/global": "^5.0.0",
    "sass": "^1.87.0",
    "storybook": "^9.1.8"
  }
}

{
  "name": "@haspen/ui",
  "version": "0.1.0",
  "description": "Vue 3 UI components for Haspen UI",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./dist/style.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/allanasp/haspen-ui.git",
    "directory": "packages/ui"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf .turbo node_modules dist",
    "test": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.5.13"
  },
  "dependencies": {
    "@haspen/core": "workspace:*",
    "@haspen/shared": "workspace:*"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@haspen/composables": "workspace:*",
    "@testing-library/jest-dom": "^6.8.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/test-utils": "^2.4.0",
    "axe-core": "^4.10.3",
    "sass": "^1.87.0",
    "vitest-axe": "^0.1.0"
  }
}

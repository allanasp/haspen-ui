{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist/types",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "skipLibCheck": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "composite": false
  },
  "vueCompilerOptions": {
    "target": 3,
    "jsx": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}

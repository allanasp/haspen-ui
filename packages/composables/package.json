{
  "name": "@haspen/composables",
  "version": "1.0.0",
  "description": "Vue 3 composables for Haspen UI",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/allanasp/haspen-ui.git",
    "directory": "packages/composables"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf .turbo node_modules dist",
    "test": "vitest --passWithNoTests",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.5.13"
  },
  "dependencies": {
    "@haspen/core": "workspace:*",
    "@haspen/design-tokens": "workspace:*",
    "@haspen/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.17.45",
    "tsup": "^8.0.2"
  }
}

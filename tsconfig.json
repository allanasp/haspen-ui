{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["vitest", "node", "vue"],
    "baseUrl": ".",
    "paths": {
      "@haspen/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/types",
    "packages/*/index.ts",
    "packages/*/index.js"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "vueCompilerOptions": {
    "target": 3,
    "extensions": [".vue"]
  }
}

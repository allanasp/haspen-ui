{
  "name": "haspen-ui",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/node": "22.15.17",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "eslint": "9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.1.0",
    "husky": "^9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "^15.5.2",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "turbo": "2.5.3 ",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vitest": "3.1.3",
    "vue-tsc": "2.2.10"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "20.19.1",
    "pnpm": "10.10.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
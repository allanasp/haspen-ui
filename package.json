{
  "name": "haspen-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev",
    "dev:playground": "turbo run dev --filter=@haspen-ui/playground",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,vue,scss,css,json,md,yml,yaml}\"",
    "lint:js": "eslint \"{packages,apps,.storybook}/**/*.{js,jsx,ts,tsx,vue}\" --fix",
    "lint:styles": "stylelint \"{packages,apps}/**/*.{scss,css,vue}\" --fix",
    "lint:format": "prettier --check \"**/*.{ts,tsx,vue,scss,css,json,md,yml,yaml}\"",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "release": "auto shipit",
    "version": "auto version",
    "changelog": "auto changelog"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^9.49.4",
    "@auto-it/conventional-commits": "^9.10.4",
    "@auto-it/first-time-contributor": "^9.10.4",
    "@auto-it/magic-zero": "^11.3.0",
    "@auto-it/omit-commits": "^9.10.4",
    "@auto-it/released": "^9.10.4",
    "@auto-it/upload-assets": "^9.10.4",
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@neoconfetti/react": "^1.0.0",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-onboarding": "^9.1.8",
    "@storybook/addon-vitest": "^9.1.8",
    "@storybook/csf": "^0.1.13",
    "@storybook/global": "^5.0.0",
    "@storybook/vue3-vite": "^9.1.8",
    "@types/node": "22.15.17",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "@vitest/browser": "3.1.3",
    "@vitest/coverage-v8": "3.1.3",
    "auto": "^9.10.4",
    "chromatic": "^13.3.4",
    "eslint": "9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "filesize": "^11.0.2",
    "husky": "^9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "^15.5.2",
    "playwright": "^1.54.2",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "storybook": "^9.1.8",
    "strip-ansi": "^7.1.0",
    "stylelint": "^16.23.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-scss": "^6.12.1",
    "turbo": "2.5.3 ",
    "typescript": "5.8.3",
    "vite": "^6.4.1",
    "vitest": "3.1.3",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "2.2.10"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "22.12.0",
    "pnpm": "10.14.0"
  },
  "lint-staged": {
    "*.{ts,tsx,vue,scss,css,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "pnpm": {
    "overrides": {
      "file-type": ">=16.5.4",
      "node-fetch": ">=2.6.7",
      "glob": ">=11.1.0",
      "@octokit/request-error": ">=5.1.1",
      "@octokit/request": ">=8.4.1",
      "@octokit/plugin-paginate-rest": ">=9.2.2"
    }
  }
}
